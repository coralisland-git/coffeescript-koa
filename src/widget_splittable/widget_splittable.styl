.scrollcontent
	//height 100%
.ViewWidgetSplittable
	background transparent
	width 100%
	max-width 100%
	height 100%
	border none !important

.widgetsplittable-container
	width 100%
	height 100%
	background-color #f6f6f6
	box-sizing border-box
	.widgetsplittable
		height 100%
		width 100%
	
.split
	-webkit-box-sizing: border-box
	-moz-box-sizing: border-box
	box-sizing: border-box
	overflow-y hidden
	overflow-x hidden
	border: 1px solid #C0C0C0
	background-color: #fff    
	&.split-horizontal
		height 100%
		float left
	
.gutter
	background-color transparent
	background-repeat no-repeat
	background-position 50%
	
	&.gutter-horizontal
		cursor col-resize
		background-image url('/images/grips_horizontal.png')
		height 100%
		float left
	&.gutter-vertical
		cursor row-resize
		background-image url('images/grips_vertical.png')
		
	
