.widgetsplittable-container
	width 900px
	height 600px
	border 1px solid #C0C0C0
	padding 8px
	background-color #f6f6f6
	box-sizing border-box

	.widgetsplittable
		height 100%
		width 100%
	
.split
	-webkit-box-sizing: border-box
	-moz-box-sizing: border-box
	box-sizing: border-box
	overflow-y auto 
	overflow-x auto
	border: 1px solid #C0C0C0
	box-shadow: inset 0 1px 2px #e4e4e4
	background-color: #fff
    
	&.split-horizontal
		height 100%
		float left
	
.gutter
	background-color transparent
	background-repeat no-repeat
	background-position 50%
	
	&.gutter-horizontal
		cursor col-resize
		background-image url('/images/grips_horizontal.png')
		height 100%
		float left
	&.gutter-vertical
		cursor row-resize
		background-image url('images/grips_vertical.png')
		
	
