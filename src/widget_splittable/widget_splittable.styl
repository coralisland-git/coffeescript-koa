html, body 
	height 100%
	
body 
	padding 8px
	background-color #f6f6f6
	box-sizing border-box
	
.split
	-webkit-box-sizing: border-box
       -moz-box-sizing: border-box
            box-sizing: border-box
    
    overflow-y auto 
    overflow-x hidden
    
    .split-horizontal
    	height 100%
    	float left
    
.split-content
	border 1px solid #c0c0c0
	box-shadow inset o 1px 2px #e4e4e4
	background-color #fff
	
.gutter
	background-color transparent
	background-repeat no-repeat
	background-position 50%
	
	.gutter-horizontal
		cursor col-resize
		background-image url('/images/grips_horizontal.png')
		height 100%
		float left
	.gutter-vertical
		cursor row-resize
		background-image url('images/grips_vertical.png')
		
	
